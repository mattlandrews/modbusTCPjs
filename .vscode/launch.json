{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Modbus Slave App",
            "program": "${workspaceFolder}/modbusSlave_app.js",
            "console": "integratedTerminal",
            "args": [
                "--ip",
                "127.0.0.1",
                "--port",
                "502",
                "--data",
                "./slaveData.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Master Example",
            "program": "${workspaceFolder}/example_master.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Slave Example",
            "program": "${workspaceFolder}/example_slave.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/tests"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}